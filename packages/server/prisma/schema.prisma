generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "esm"
  driver       = "better-sqlite3"

  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
}

enum NodeType {
  NamedExport
  NamedImport
  RuntimeDynamicImport
  GlobalVarRead
  GlobalVarWrite
  WebStorageRead
  WebStorageWrite
  EventOn
  EventEmit
  DynamicModuleFederationReference
  UrlParamRead
  UrlParamWrite
}

enum AppType {
  Lib
  App
}

model Project {
  id        String   @id @default(cuid())
  addr      String
  name      String   @unique
  type      AppType
  entries   Json?    // Store project entries path for projects that cannot find entries by static analysis
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // Relations
  nodes Node[] @relation("BelongsTo")

  // Indexes
  @@index([name])
}

model Node {
  id           String   @id @default(cuid())
  branch       String
  projectId    String
  projectName  String
  version      String
  type         NodeType
  name         String
  relativePath String
  startLine    Int
  startColumn  Int
  endLine      Int
  endColumn    Int
  meta         Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
  qlsVersion   String   @default("0.1.0")

  // Columns for Connection Creation Optimization
  import_pkg     String?
  import_name    String?
  import_subpkg  String?
  export_entry   String?

  // Relations
  fromConnections Connection[] @relation("FromNode")
  toConnections   Connection[] @relation("ToNode")
  project         Project      @relation("BelongsTo", fields: [projectId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([projectName])
  @@index([type])
  @@index([name])
  @@index([branch])
  @@index([version])
  @@index([qlsVersion])
  
    // 1. FOR nFrom (Scanner)
  // Purpose: Instantly grab all 'NamedImport' nodes and provide their join keys.
  // Fix: Starts with 'type'. Includes 'id' to support the SELECT.
  @@index([type, import_pkg, import_name, branch, projectName, id], map: "idx_scan_named_imports")
  
  // 2. FOR nFrom (Scanner - Dynamic)
  // Purpose: Instantly grab all 'RuntimeDynamicImport' nodes.
  @@index([type, import_pkg, import_subpkg, import_name, branch, projectName, id], map: "idx_scan_dynamic_imports")

  // 3. FOR nTo (Lookup - Standard)
  // Purpose: Used by Rule 1 & 2. Matches Join keys perfectly + checks Type + returns ID.
  // Note: 'export_entry' is included to distinguish specific exports if needed, 
  // but 'name' is the primary join key here.
  @@index([projectName, branch, name, type, id, export_entry], map: "idx_lookup_named_exports")

  // 4. FOR nTo (Lookup - Rule 6 Special Case)
  // Purpose: Used by Rule 6. Skips 'name', joins on 'export_entry'.
  // We need a separate index where 'export_entry' comes before 'name' (or without 'name').
  @@index([projectName, branch, export_entry, type, id], map: "idx_lookup_federation_exports")

  // 5. FOR Generic Rules (Hybrid)
  // Purpose: Efficiently join on name/branch, then filter by type.
  // Putting 'type' in the index prevents table lookups to check if it's 'GlobalVarRead' etc.
  @@index([name, branch, type, projectName, id], map: "idx_join_generics")

  @@unique([projectId, branch, relativePath, type, name, startLine, startColumn, endLine, endColumn, qlsVersion])
}

model Connection {
  fromId    String
  toId      String
  createdAt DateTime @default(now())

  // Relations
  fromNode Node @relation("FromNode", fields: [fromId], references: [id], onDelete: Cascade)
  toNode   Node @relation("ToNode", fields: [toId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([fromId])
  @@index([toId])
  @@id([fromId, toId])
}

enum ActionType {
  static_analysis
  report
}

enum ActionStatus {
  pending
  running
  completed
  failed
}

model Action {
  id         String       @id @default(cuid())
  status     ActionStatus
  type       ActionType
  parameters Json
  result     Json?
  error      String?
  logs       Json?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now()) @updatedAt
  scheduledFor DateTime?

  // Indexes
  @@index([status])
  @@index([type])
  @@index([status, scheduledFor])
}

// Better Auth Models

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  // Admin plugin fields
  role       String?   @default("user")
  banned     Boolean   @default(false)
  banReason  String?
  banExpires DateTime?

  // Relations
  accounts Account[]
  sessions Session[]

  // Indexes
  apikeys Apikey[]

  @@index([email])
  @@index([role])
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  ipAddress String?
  userAgent String?

  // Admin plugin field
  impersonatedBy String?

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([token])
  @@index([userId])
  @@index([expiresAt])
}

model Account {
  id                   String    @id @default(cuid())
  accountId            String
  providerId           String
  userId               String
  accessToken          String?
  refreshToken         String?
  idToken              String?
  accessTokenExpiresAt DateTime?
  scope                String?
  password             String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @default(now()) @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes
  refreshTokenExpiresAt DateTime?

  @@unique([providerId, accountId])
  @@index([userId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  // Indexes
  @@unique([identifier, value])
  @@index([expiresAt])
}

model Apikey {
  id                  String    @id
  name                String?
  start               String?
  prefix              String?
  key                 String
  userId              String
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  refillInterval      Int?
  refillAmount        Int?
  lastRefillAt        DateTime?
  enabled             Boolean?  @default(true)
  rateLimitEnabled    Boolean?  @default(true)
  rateLimitTimeWindow Int?
  rateLimitMax        Int?
  requestCount        Int?
  remaining           Int?
  lastRequest         DateTime?
  expiresAt           DateTime?
  createdAt           DateTime
  updatedAt           DateTime
  permissions         String?
  metadata            String?
}

model Lock {
  key        String   @id
  token      String
  acquiredAt DateTime @default(now())
  expiresAt  DateTime
}

model LLMConfig {
  id          String   @id @default(cuid())
  apiKey      String
  baseUrl     String
  modelName   String
  temperature Float
  enabled     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}
