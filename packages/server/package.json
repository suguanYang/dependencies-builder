    "better-auth": "^1.3.29",
    "fastify": "5.6.0",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "piscina": "^4.9.2",
    "prisma": "^7.0.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.29",
